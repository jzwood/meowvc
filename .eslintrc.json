{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "rules": {
        "no-cond-assign": [1],
        "no-func-assign": [1],
        "indent": [ 2, 2 ],
        "linebreak-style": [ "error", "unix" ],
        "quotes": [ 1, "single" ],
        "semi": [ "error", "never" ],
        "no-undef": [0],
        "no-console": [0],
        "no-unused-vars": [1, { "vars": "all", "args": "all"}]
    }
}
